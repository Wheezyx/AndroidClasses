<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#D50022FF"
                                             tools:context=".fragments.AddSkillFragment">
    <Button
            android:text="Save"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:textSize="25sp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="216dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName"
            android:textSize="25sp"
            android:text="Skil name"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="299dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_height="105dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.489" android:text="Description"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:ems="10"
            android:id="@+id/editText5" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" android:text="Level" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintVertical_bias="0.074"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>