<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#D50022FF"
                                             tools:context=".fragments.AddSkillFragment">
    <Button
            android:text="Save"
            android:layout_width="147dp"
            android:layout_height="55dp"
            android:textSize="25sp"
            android:id="@+id/addButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/pickPhotoBtn"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:inputType="textPersonName"
            android:textSize="25sp"
            android:text="Name"
            android:ems="10"
            android:id="@+id/name"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="299dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_height="105dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/description" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.489" android:text="Description"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginBottom="26dp" app:layout_constraintBottom_toTopOf="@+id/image"/>
    <ImageView
            android:src="@android:color/background_dark"
            android:layout_width="181dp"
            android:layout_height="165dp"
            android:id="@+id/image" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/addButton"/>
    <Button
            android:text="Pick a photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickPhotoBtn" app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="220dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.397"/>
</android.support.constraint.ConstraintLayout>