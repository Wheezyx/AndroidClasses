<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SkillDetailsActivity">

    <ImageView
            android:layout_width="315dp"
            android:layout_height="167dp" app:srcCompat="@android:color/background_dark"
            android:id="@+id/skillImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="242dp"
            android:layout_height="49dp"
            android:id="@+id/skillName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/skillImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.497" android:fontFamily="sans-serif-light" android:textSize="30sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="227dp"
            android:layout_height="62dp"
            android:id="@+id/skillDescription" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="12dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/skillName"/>
    <TextView
            android:text="TextView"
            android:layout_width="123dp"
            android:layout_height="38dp"
            android:id="@+id/skillLevel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/skillAvailableFor"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/skillDescription" app:layout_constraintHorizontal_bias="0.612"/>
    <TextView
            android:text="TextView"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:id="@+id/skillAvailableFor" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginTop="16dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/skillDescription"/>
</android.support.constraint.ConstraintLayout>